               </ul>
          </div>
     </div>
</nav>


<!-- CORPO PRINCIPAL DA PÁGINA -->
<div class="container" id="containerBody">
     

     <!-- TÍTULO da página e breve explicação -->
     <div class="heading">
          <h2 class="text-center">
               <i class="fas fa-users"></i>
               Usuários
          </h2>
          <p class="text-center">
               Pacientes e profissionais cadastrados no sistema.
               <br/ >
               Clique sobre o usuário desejado para obter mais informações.
          </p>
     </div>


     <!-- CAMPO DE BUSCA e BOTÃO para cadastrar profissionais -->
     <div class="container box-add-btn row">
          <!-- div invisível -->
          <div class="col-sm-3 col-lg-4"></div>
          <!-- BOTÃO -->
          <div class="col-12 col-sm-6 col-lg-4">
               <button type="button" class="btn btn-info btn-block" id="btnCadastrarNovo" data-toggle="modal" data-target="#modalCadastrarUsuario">
                    <i class="fas fa-user-plus"></i>
                    Cadastrar Profissional
               </button>
          </div>
          <!-- div invisível -->
          <div class="col-sm-3 col-lg-4"></div>
     </div>



     <!-- MODAL com formulário para cadastrar profissional -->
     <div class="modal fade" id="modalCadastrarUsuario" tabindex="-1" role="dialog" aria-labelledby="modalCadastrarProfLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
               <div class="modal-content">
                    <div class="modal-header">
                         <h5 class="modal-title" id="modalCadastrarProfLabel">Cadastrar Profissional</h5>
                         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                         </button>
                    </div>

                    <div class="modal-body">
                         <!-- FORMULÁRIO para cadastro de novo profissional -->
                         <form role="form" action="/usuario/cadastrar" method="POST" id="formCadastroUsuario">

                              <!-- Campo Perfil -->
                              <div class="form-group">
                                   <legend>Perfil:</legend>
                                   <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="perfil" id="perfilMed" value="medico" required>
                                        <label class="form-check-label" for="perfilMed"> Médico</label>
                                   </div>
                                   <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="perfil" id="perfilRecep" value="recepcionista">
                                        <label class="form-check-label" for="perfilRecep"> Recepcionista</label>
                                   </div>
                                   <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="perfil" id="perfilLab" value="laboratorio">
                                        <label class="form-check-label" for="perfilLab"> Laboratório</label>
                                   </div>
                              </div>
     
                              <!-- Campos Especialidade e CRM-->
                              <div class="form-row" id="especsMedicas">
                                   <div class="form-group col-sm-8">
                                        <label for="medEspec">Especialidade:</label>
                                        <select name="especialidade" id="medEspec" class="form-control">
                                             <option value="">Escolha a especialidade...</option>
                                             <option value="cardiologia">Cardiologia</option>
                                             <option value="clinicageral">Clínica Geral</option>
                                             <option value="dermatologia">Dermatologia</option>
                                             <option value="endocrinologia">Endocrinologia</option>
                                             <option value="gastrologia">Gastrologia</option>
                                             <option value="infectologia">Infectologia</option>
                                             <option value="ginecologia">Ginecologia</option>
                                             <option value="mastologia">Mastologia</option>
                                             <option value="neurologia">Neurologia</option>
                                             <option value="oftalmologia">Oftalmologia</option>
                                             <option value="oncologia">Oncologia</option>
                                             <option value="pediatria">Pediatria</option>
                                             <option value="psiquiatria">Psiquiatria</option>
                                             <option value="urologia">Urologia</option>
                                        </select>
                                   </div>
                                   <div class="form-group col-sm-4">
                                        <label for="inputCRM">Nº CRM:</label>
                                        <input type="text" name="crm" id="inputCRM" class="form-control">
                                   </div>
                              </div>

                              <!-- Campos Nome e Sobrenome -->
                              <div class="form-row">
                                   <div class="form-group col-sm-4">
                                        <label for="inputNome">Nome:</label>
                                        <input type="text" name="nome" id="inputNome" class="form-control" placeholder="" required>
                                   </div>
                                   <div class="form-group col-sm-8">
                                        <label for="inputSobrenome">Sobrenome:</label>
                                        <input type="text" name="sobrenome" id="inputSobrenome" class="form-control" placeholder="" required>
                                   </div>
                              </div>

                              <!-- Campo E-mail e Data de Nascimento -->
                              <div class="form-row">
                                   <div class="form-group col-sm-7">
                                        <label for="inputEmail">E-mail:</label>
                                        <input type="email" name="email" id="inputEmail" autocomplete="email" class="form-control" placeholder="nome@dominio.com.br" required>
                                   </div>
                                   <div class="form-group col-sm-5">
                                        <label for="inputNascimento">Data de Nascimento:</label>
                                        <input type="date" name="nascimento" id="inputNascimento" class="form-control" required>
                                   </div>
                              </div>

                              <!-- Campos Telefone / Celular -->
                              <div class="form-group">
                                   <label for="inputTel">Telefone / Celular:</label>
                                   <input type="text" name="telefone" id="inputTel" class="form-control" placeholder="(xx) 0000-0000" required>
                              </div>

                              <!-- Campo Sexo -->
                              <div class="form-group">
                              <legend>Sexo:</legend>
                                   <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="sexo" id="sexoMasc" value="masculino" required>
                                        <label class="form-check-label" for="sexoMasc"> Masculino</label>
                                   </div>
                                   <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="sexo" id="sexoFem" value="feminino">
                                        <label class="form-check-label" for="sexoFem"> Feminino</label>
                                   </div>
                              </div>

                              <!-- Campo Endereço -->
                              <div class="form-group">
                                   <label for="inputAddress">Endereço:</label>
                                   <input type="text" name="logradouro" id="inputAddress" class="form-control" placeholder="Rua, avenida ou logradouro" required>
                              </div>
                              
                              <!-- Campos Número e Bairro-->
                              <div class="form-row">
                                   <div class="form-group col-sm-3">
                                        <label for="inputNum">Número:</label>
                                        <input type="number" name="numero" id="inputNum" class="form-control" required>
                                   </div>
                                   <div class="form-group col-sm-9">
                                        <label for="inputBairro">Bairro:</label>
                                        <input type="text" name="bairro" id="inputBairro" class="form-control" required>
                                   </div>
                              </div>

                              <!-- Campos Cidade / UF / CEP -->
                              <div class="form-row">
                                   <div class="form-group col-sm-6">
                                        <label for="inputCidade">Cidade:</label>
                                        <input type="text" name="cidade" id="inputCidade" class="form-control" placeholder="" required>
                                   </div>
                                   <div class="form-group col-sm-3">
                                        <label for="inputUF">UF:</label>
                                        <select name="uf" id="inputUF" class="form-control" required>
                                             <option value="">Escolha...</option>
                                             <option value="AL">AL</option>
                                             <option value="AM">AM</option>
                                             <option value="BA">BA</option>
                                             <option value="DF">DF</option>
                                             <option value="GO">GO</option>
                                             <option value="MG">MG</option>
                                             <option value="RJ">RJ</option>
                                             <option value="SC">SC</option>
                                             <option value="SP">SP</option>
                                             <option value="TO">TO</option>
                                        </select>
                                   </div>
                                   <div class="form-group col-sm-3">
                                        <label for="inputCEP">CEP:</label>
                                        <input type="text" name="cep" id="inputCEP" class="form-control" placeholder="xxxxx-xxx" maxlength="9" required>
                                   </div>
                              </div>

                              <!-- Campo Senha -->
                              <div class="form-group">
                                   <label for="inputSenha">Senha:</label>
                                   <input type="password" name="senha" id="inputSenha" autocomplete="current-password" class="form-control" placeholder="Utilize números e letras" required>
                              </div>
                         </form>
                    </div>

                    <div class="modal-footer">
                         <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                         <button type="submit" class="btn btn-success" id="btnCadastrar" form="formCadastroUsuario">Cadastrar</button>
                    </div>
               </div>
          </div>
     </div>



     <!-- ALERTAS para exclusão, edição e inserção de paciente -->
     <div id="divAlerts">

     </div>



     <!-- ABAS com lista de pacientes e profissionais -->
     <div id="menuTabs">
          <ul class="nav nav-tabs">
               <li class="nav-item">
                    <a class="nav-link" href="/usuarios/pacientes">
                         <i class="fas fa-user-injured"></i>
                         Pacientes
                    </a>
               </li>
               <li class="nav-item">
                    <a class="nav-link active" href="/usuarios/profissionais">
                         <i class="fas fa-user-md"></i>
                         Profissionais
                         <span class="sr-only">(aba atual)</span>
                    </a>
               </li>
          </ul>

          <!-- TABELA com lista de pacientes -->
          <div class="table-responsive-sm">
               <table class="table tabela-usuarios">
                    <thead>
                         <tr>
                              <th scope="col" hidden>ID</th>
                              <th class ="th-nome" scope="col">Nome</th>
                              <th class ="th-email" scope="col">E-mail</th>
                              <th class ="th-perfil" scope="col">Perfil / Especialidade</th>
                         </tr>
                    </thead>
                    <tbody>
                         <% profissionais.forEach( (data, key) => { %>
                              <% if(data.perfil == 'paciente') { %>
                                   <% return; %>
                              <% } %>
                              <tr class="clickable-row" id="row_<%= key %>">
                                   <td class="td-id" hidden><%= data._id %></td>
                                   <td> <%= data.nome %>
                                        <% if(data.sobrenome) { %>
                                             <%= ' ' + data.sobrenome %>
                                        <% } %>
                                   </td>
                                   <td><%= data.email %></td>
                                   <td>
                                        <% if (data.perfil == 'medico') { %>
                                             <%= 'Médico'; %>
                                        <% }else{ %>
                                             <%= data.perfil.charAt(0).toUpperCase() +  data.perfil.slice(1); %>
                                        <% } %>
                                        <% if (data.especialidade) { %>
                                             <%= ' - ' + data.especialidade.charAt(0).toUpperCase() + data.especialidade.slice(1); %>
                                        <% } %>
                                   </td>
                              </tr>
                         <% }) %>
                    </tbody>
               </table>
          </div><!--/table-responsive-->
     </div><!--/menuTabs-->


     <!-- MODAL com formulário para EDITAR dados de um profissional -->
     <div class="modal fade" id="modalEditarUsuario" tabindex="-1" role="dialog" aria-labelledby="modalEditarProfLabel" aria-hidden="true">
               <div class="modal-dialog" role="document">
                    <div class="modal-content">
                         <div class="modal-header">
                              <h5 class="modal-title" id="modalEditarProfLabel">Dados do Profissional</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                              </button>
                         </div>
          
                         <div class="modal-body">     
                              <!-- FORMULÁRIO para editar dados de um paciente -->
                              <form role="form" action="" method="POST" id="formEditarUsuario">
          
                                   <!-- Campo ID (escondido) -->
                                   <input type="text" name="id" id="editID" hidden>

                                   <!-- Campo Perfil (valor fixo e escondido) -->
                                   <input type="text" name="perfil" id="editPerfil" hidden>
          
                                   <!-- Campo Perfil -->
                                   <div class="form-group">
                                        <legend>Perfil:</legend>
                                        <div class="form-check form-check-inline">
                                             <input class="form-check-input" type="radio" name="perfil" id="editPerfilMed" value="medico" required>
                                             <label class="form-check-label" for="editPerfilMed"> Médico</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                             <input class="form-check-input" type="radio" name="perfil" id="editPerfilRecep" value="recepcionista">
                                             <label class="form-check-label" for="editPerfilRecep"> Recepcionista</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                             <input class="form-check-input" type="radio" name="perfil" id="editPerfilLab" value="laboratorio">
                                             <label class="form-check-label" for="editPerfilLab"> Laboratório</label>
                                        </div>
                                   </div>
     
                                   <!-- Campos Especialidade e CRM-->
                                   <div class="form-row" id="editEspecsMedicas">
                                        <div class="form-group col-sm-8">
                                             <label for="editEspec">Especialidade:</label>
                                             <select name="especialidade" id="editEspec" class="form-control">
                                                  <option value="">Escolha a especialidade...</option>
                                                  <option value="cardiologia">Cardiologia</option>
                                                  <option value="clinicageral">Clínica Geral</option>
                                                  <option value="dermatologia">Dermatologia</option>
                                                  <option value="endocrinologia">Endocrinologia</option>
                                                  <option value="gastrologia">Gastrologia</option>
                                                  <option value="infectologia">Infectologia</option>
                                                  <option value="ginecologia">Ginecologia</option>
                                                  <option value="mastologia">Mastologia</option>
                                                  <option value="neurologia">Neurologia</option>
                                                  <option value="oftalmologia">Oftalmologia</option>
                                                  <option value="oncologia">Oncologia</option>
                                                  <option value="pediatria">Pediatria</option>
                                                  <option value="psiquiatria">Psiquiatria</option>
                                                  <option value="urologia">Urologia</option>
                                             </select>
                                        </div>
                                        <div class="form-group col-sm-4">
                                             <label for="editCRM">Nº CRM:</label>
                                             <input type="text" name="crm" id="editCRM" class="form-control">
                                        </div>
                                   </div>


                                   <!-- Campos Nome e Sobrenome -->
                                   <div class="form-row">
                                        <div class="form-group col-sm-4">
                                             <label for="editNome">Nome:</label>
                                             <input type="text" name="nome" id="editNome" class="form-control" required>
                                        </div>
                                        <div class="form-group col-sm-8">
                                             <label for="editSobrenome">Sobrenome:</label>
                                             <input type="text" name="sobrenome" id="editSobrenome" class="form-control" required>
                                        </div>
                                   </div>
          
                                   <!-- Campo E-mail e Data de Nascimento -->
                                   <div class="form-row">
                                        <div class="form-group col-sm-7">
                                             <label for="editEmail">E-mail:</label>
                                             <input type="email" name="email" id="editEmail" autocomplete="email" class="form-control" required>
                                        </div>
                                        <div class="form-group col-sm-5">
                                             <label for="editNascimento">Data de Nascimento:</label>
                                             <input type="date" name="nascimento" id="editNascimento" class="form-control" required>
                                        </div>
                                   </div>
          
                                   <!-- Campo Telefone / Celular -->
                                   <div class="form-group">
                                        <label for="editTel">Telefone / Celular:</label>
                                        <input type="text" name="telefone" id="editTel" class="form-control" placeholder="(xx) 0000-0000">
                                   </div>
          
                                   <!-- Campo Sexo -->
                                   <div class="form-group" id="editGroupSexo">
                                        <legend>Sexo:</legend>
                                        <div class="form-check form-check-inline">
                                             <input class="form-check-input" type="radio" name="sexo" id="editSexoMasc" value="masculino" required>
                                             <label class="form-check-label" for="editSexoMasc"> Masculino</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                             <input class="form-check-input" type="radio" name="sexo" id="editSexoFem" value="feminino">
                                             <label class="form-check-label" for="editSexoFem"> Feminino</label>
                                        </div>
                                   </div>

                                   <!-- Campo Endereço -->
                                   <div class="form-group">
                                        <label for="editAddress">Endereço:</label>
                                        <input type="text" name="logradouro" id="editAddress" class="form-control" required>
                                   </div>
                                   
                                   <!-- Campos Número, Bairro e Complemento-->
                                   <div class="form-row">
                                        <div class="form-group col-sm-3">
                                             <label for="editNum">Número:</label>
                                             <input type="number" name="numero" id="editNum" class="form-control" required>
                                        </div>
                                        <div class="form-group col-sm-9">
                                             <label for="editBairro">Bairro:</label>
                                             <input type="text" name="bairro" id="editBairro" class="form-control" required>
                                        </div>
                                   </div>
          
                                   <!-- Campos CEP / Cidade / UF -->
                                   <div class="form-row">
                                        <div class="form-group col-sm-6">
                                             <label for="editCidade">Cidade:</label>
                                             <input type="text" name="cidade" id="editCidade" class="form-control" required>
                                        </div>
                                        <div class="form-group col-sm-3">
                                             <label for="editUF">UF:</label>
                                             <select name="uf" id="editUF" class="form-control" required>
                                                  <option value="">Escolha...</option>
                                                  <option value="AL">AL</option>
                                                  <option value="AM">AM</option>
                                                  <option value="BA">BA</option>
                                                  <option value="DF">DF</option>
                                                  <option value="GO">GO</option>
                                                  <option value="MG">MG</option>
                                                  <option value="RJ">RJ</option>
                                                  <option value="SC">SC</option>
                                                  <option value="SP">SP</option>
                                                  <option value="TO">TO</option>
                                             </select>
                                        </div>
                                        <div class="form-group col-sm-3">
                                             <label for="editCEP">CEP:</label>
                                             <input type="text" name="cep" id="editCEP" class="form-control" maxlength="9" required>
                                        </div>
                                   </div>
          
                                   <!-- Campo Senha -->
                                   <div class="form-group" id="senhaAtualGroup">
                                        <label for="currentPassword">Senha atual:</label>
                                        <input type="password" name="senha_atual" autocomplete="current-password" id="currentPassword" class="form-control">
                                   </div>
                                   <div class="form-group" id="novaSenhaGroup">
                                        <label for="newPassword">Nova senha:</label>
                                        <input type="password" name="nova_senha" autocomplete="new-password" id="newPassword" class="form-control">
                                   </div>
                              </form>
                         </div>
          
                         <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnFecharCancelar">Fechar</button>
                              <button type="button" class="btn btn-info" id="btnEditar">Editar</button>
                              <button type="button" class="btn btn-danger" id="btnExcluir">Excluir</button>
                              <button type="submit" class="btn btn-success" id="btnSalvar" form="formEditarUsuario">Salvar</button>
                         </div>
     
                    </div><!--/modal-content-->
               </div><!--/modal-dialog-->
          </div><!--modal-->
</div><!--/containerBody-->



<!-- Rodapé da página -->
<footer>
	<p class="text-center">Copyright <i class="far fa-copyright"></i> 2019</p>
	<p class="text-center">Jair Junior</p>
</footer>



<script type="text/javascript">
     $(document).ready(function(){

          if(window.location.search == "?deleted=success"){
               $("#divAlerts").html(
                    "<div class='alert alert-danger alert-dismissible fade show' role='alert'>Profissional <strong>deletado com sucesso</strong> do Banco de Dados!<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button></div>"
               );
          }
          else if(window.location.search == "?created=success"){
               $("#divAlerts").html(
                    "<div class='alert alert-success alert-dismissible fade show' role='alert'>Profissional <strong>cadastrado com sucesso</strong> no Banco de Dados!<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button></div>"
               );
          }
          else if(window.location.search == "?edited=success"){
               $("#divAlerts").html(
                    "<div class='alert alert-success alert-dismissible fade show' role='alert'>Os dados do profissional <strong> foram editados com sucesso</strong>!<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button></div>"
               );
          }

          // Configurações da tabela dinâmica
          $(".tabela-usuarios").fancyTable({
               sortColumn: 0,
               searchable: true,
               globalSearch: true,
               inputPlaceholder: ' Pesquisar...'
          });

          
          // FORMULÁRIO DE CADASTRO
          // Mostra ou esconde alguns campos dependendo do perfil do profissional
          $('#btnCadastrarNovo').click(function(){
               $('#especsMedicas').hide();

               // Se selecionar o perfil Médico
               $('#perfilMed').click(function() {
                    $('#especsMedicas').show();
                    $('#medEspec').prop('disabled', false);
                    $('#inputCRM').prop('disabled', false);
               });
               // Se selecionar o perfil Recepcionista ou Laboratório
               $('#perfilRecep, #perfilLab').click(function() {
                    $('#especsMedicas').hide();
                    $('#medEspec').prop('disabled', true);
                    $('#inputCRM').prop('disabled', true);
               });
               // Complemento de ações para perfil Laboratório
               $('#perfilLab').click(function() {
                    $("#inputSobrenome").prop('disabled', true);
                    $("#inputNascimento").prop('disabled', true);
                    $("#sexoMasc").prop('disabled', true);
                    $("#sexoFem").prop('disabled', true);
               });
               // Complemento de ações para perfil Recepcionista e Médico
               $('#perfilRecep, #perfilMed').click(function() {
                    $("#inputSobrenome").prop('disabled', false);
                    $("#inputNascimento").prop('disabled', false);
                    $("#sexoMasc").prop('disabled', false);
                    $("#sexoFem").prop('disabled', false);
               });
          });

          
          // MOSTRAR DADOS DO USUÁRIO / PROFISSIONAL
          // Quando clicar sobre uma linha da tabela que corresponde a um profissional,
          // A identificação é feita através do seu ID, em um campo escondido na tabela
          $(".clickable-row").click( function(){
               var id = $(this).find(".td-id").text();
               var url = "/usuario/get/" + id;

               // Resgata dados do servidor, abre modal e preenche o formulário
               $.get(url, function(data){
                    $("#modalEditarUsuario").modal("show");
                    if(data.perfil == "medico"){
                         $("#editEspecsMedicas").show();
                         $("#editCRM").prop("disabled", false);
                    }
                    else{
                         $("#editEspecsMedicas").hide();
                         $("#editEspec").prop("disabled", true);
                         $("#editCRM").prop("disabled", true);
                    }
                    // Campos de senhas (não implementado)
                    $("currentPassword").prop("disabled", true);
                    $("newPassword").prop("disabled", true);
                    $("#senhaAtualGroup").remove();
                    $("#novaSenhaGroup").remove();
                    // Botões
                    $("#btnFecharCancelar").text("Fechar");
                    $("#btnEditar").show();
                    $("#btnExcluir").hide();
                    $("#btnSalvar").hide();

                    // Preenche formulário
                    $("#editID").val(data._id);             //campo escondido
                    $("#editPerfil").val(data.perfil);      //campo escondido

                    //preenche campos específicos de cada perfil
                    if(data.perfil == "medico"){
                         $("#editPerfilMed").prop("checked", true);
                         $("#editEspec").val(data.especialidade).prop("disabled", true);
                         $("#editCRM").val(data.crm).prop("readonly", true);
                    }
                    else if(data.perfil == "recepcionista"){
                         $("#editPerfilRecep").prop("checked", true);
                    }
                    else if(data.perfil == "laboratorio"){
                         $("#editPerfilLab").prop("checked", true);
                         $("#editGroupSexo").hide();
                         $("#editSexoMasc").prop("disabled", true);
                         $("#editSexoFem").prop("disabled", true);
                         $("#editSobrenome").val(" ").prop("disabled", true);
                    }
                    $("#editPerfilMed").prop("disabled", true);
                    $("#editPerfilRecep").prop("disabled", true);
                    $("#editPerfilLab").prop("disabled", true);

                    $("#editNome").val(data.nome).prop("readonly", true);
                    $("#editEmail").val(data.email).prop("readonly", true);
                    $("#editNascimento").val(data.nascimento).prop("readonly", true);
                    $("#editTel").val(data.telefone).prop("readonly", true);

                    // Se médico ou recepcionista, marca o sexo e desabilida os radio buttons
                    if(data.perfil != 'laboratorio'){
                         $("#editGroupSexo").show();
                         if(data.sexo == "masculino")
                              $("#editSexoMasc").prop("checked", true);
                         else if(data.sexo == "feminino")
                              $("#editSexoFem").prop("checked", true);
                         $("#editSexoMasc").prop("disabled", true);
                         $("#editSexoFem").prop("disabled", true);
                         $("#editSobrenome").val(data.sobrenome).prop("readonly", true);
                    }
                    $("#editAddress").val(data.endereco.logradouro).prop("readonly", true);
                    $("#editNum").val(data.endereco.numero).prop("readonly", true);
                    $("#editBairro").val(data.endereco.bairro).prop("readonly", true);
                    $("#editCidade").val(data.endereco.cidade).prop("readonly", true);
                    $("#editUF").val(data.endereco.uf).prop("disabled", true);
                    $("#editCEP").val(data.endereco.cep).prop("readonly", true);
               })
               .fail(function(err){
                    console.log(err);
                    $("#divAlerts").html(
                         "<div class='alert alert-danger alert-dismissible fade show' role='alert'><strong>Erro</strong> ao resgatar dados do profissional! <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button></div>"
                    );
               });
          });


          // FORMULÁRIO DE EDIÇÃO
          // Quando clica no botão Editar, todos os campos ficam habilitados para a edição
          // Os botões também são alterados Cancelar, Excluir e Salvar
          $("#btnEditar").click(function() {
               var perfil = $("#editPerfil").val();

               $("#editNome").prop("readonly", false);
               if(perfil == 'medico' || perfil == 'recepcionista' ) {
                    $("#editSobrenome").prop({ "readonly": false, "disabled": false });
                    $("#editNascimento").prop({ "readonly": false, "disabled": false });
                    $("#editSexoMasc").prop("disabled", false);
                    $("#editSexoFem").prop("disabled", false);
               }
               if(perfil == 'medico' ) {
                    $("#editEspec").prop("disabled", false);
                    $("#editCRM").prop("readonly", false);
               }
               if(perfil == 'laboratorio'){
                    $("#editSobrenome").prop("disabled", true);
                    $("#editNascimento").prop("disabled", true);
               }
               $("#editEmail").prop("readonly", false);     
               $("#editTel").prop("readonly", false);
               $("#editAddress").prop("readonly", false);
               $("#editNum").prop("readonly", false);
               $("#editBairro").prop("readonly", false);
               $("#editCidade").prop("readonly", false);
               $("#editUF").prop("disabled", false);
               $("#editCEP").prop("readonly", false);
               // Botões
               $("#btnFecharCancelar").text("Cancelar");
               $("#btnEditar").hide();
               $("#btnExcluir").show();
               $("#btnSalvar").show();
               // Por útimo, pega o ID do profissional e prepara o atributo action do Formulário Editar
               // Pra quando salvar a edição, o formulário ser submetido para uma rota específica no servidor
               let id = $("#editID").val();
               let url = "/usuario/editar/" + id;
               $("#formEditarUsuario").prop("action", url);
          });


          // EXCLUIR USUÁRIO
          // Ao clicar em Excluir, cria uma URL com o ID do usuário desejado
          // Faz uma requisição HTTP do tipo DELETE para excluir o usuário
          // Se der erro, mostra um alert amarelo no topo da página
          // Se der certo, mostra um alert vermelho ao recarregar a página
          $("#btnExcluir").click( function(){
               var id = $("#editID").val();

               $.ajax({
                    url: "/usuario/deletar/" + id,
                    type: "DELETE",
                    success: function(data, textStatus, jqXHR){
                         $("#modalEditarUsuario").modal("hide");
                         
                         var href = window.location.href;
                         if(href.indexOf("?") > -1){
                              var newURL = href.split("?")[0] + "?deleted=success";
                              window.location.href = newURL;
                         }
                         else{
                              window.location.href += "?deleted=success";
                         }
                    },
                    error: function(jqXHR, textStatus, errorThrown){
                         $("#modalEditarUsuario").modal("hide");
                         $("#divAlerts").html(
                              "<div class='alert alert-danger alert-dismissible fade show' role='alert'><strong>Erro</strong> ao deletar profissional do Banco de Dados! <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button></div>"
                         );
                    }
               });
          });
     });
</script>



